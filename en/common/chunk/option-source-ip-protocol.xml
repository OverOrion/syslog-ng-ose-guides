    <title>ip-protocol()</title>
    <indexterm type="parameter">
        <primary>ip-protocol()</primary>
    </indexterm>
    <informaltable frame="topbot" colsep="0" rowsep="0">
        <tgroup cols="2">
            <colspec colnum="1" colwidth="40pt"/>
            <tbody>
                <row>
                    <entry>Type:
                        <?dbhtml bgcolor="#D4D6EB" ?>
<?dbfo bgcolor="#D4D6EB" ?>
                    </entry>
                    <entry>number</entry>
                </row>
                <row>
                    <entry>Default:
                        <?dbhtml bgcolor="#D4D6EB" ?>
<?dbfo bgcolor="#D4D6EB" ?>
                    </entry>
                    <entry>4</entry>
                </row>
            </tbody>
